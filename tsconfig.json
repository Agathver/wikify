{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "outDir": "./build",
    "rootDir": "./src",
    "checkJs": false,
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
